{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist", "typings"]
}
